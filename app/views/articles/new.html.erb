<h1>create an article</h1>
<% if @article.errors.any? %>
<ul>
<% @article.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>

  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :descriptions %><br/>
    <%= f.text_field :descriptions %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  
<% end %>